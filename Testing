local Library = loadstring(game:HttpGet("https://pastebin.com/raw/vff1bQ9F"))()
local Window = Library.CreateLib("Nevan Hub | GUNAKAN DGN RISIKO ANDA SENDIRI", "DarkTheme")

--INFO
local Tab = Window:NewTab("INFO")
local InfoSection = Tab:NewSection("JANGAN PENCET TOMBOL X")
local InfoSection = Tab:NewSection("DI ATAS KANAN KALO MAU")
local InfoSection = Tab:NewSection("BISA PAKE TOOGLE DI SC INI")

-- MAIN
local Tab = Window:NewTab("Main")
local MainSection = Tab:NewSection("Main")


MainSection:NewTextBox("Report Bug", "Tulis bug yang ditemui", function(txt)
sendReport(txt)
print("Pesan report terkirim: " .. txt)
end)

local http_request = http_request or request or (syn and syn.request) or (fluxus and fluxus.request)
local webhookURL = "WEBHOOK_URL"

local function sendReport(message)
  local playerName = game:GetService("Players").LocalPlayer.Name
  local placeName = game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId).Name
  local placeId = game.PlaceId
  local data = {
    ["content"] = "",
    ["embeds"] = {
      {
        ["description"] = "Report dari " .. playerName,
        ["title"] = "Laporan Bug"
      },
      {
        ["description"] = "Game: " .. placeName .. " (Place ID: " .. placeId .. ")

" .. message,
        ["title"] = "Detail Bug"
      }
    }
  }

  local jsonData = game:GetService("HttpService"):JSONEncode(data)

  http_request({
    Url = webhookURL,
    Method = "POST",
    Headers = {
      ["Content-Type"] = "application/json"
    },
    Body = jsonData
  })
end
